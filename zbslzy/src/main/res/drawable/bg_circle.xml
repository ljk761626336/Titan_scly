<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="0.0px"
    android:insetRight="0.0px">

    <selector>
        <item android:state_enabled="false">
            <shape
                android:shape="oval"
                android:useLevel="false">
                <gradient
                    android:angle="360"
                    android:endColor="#a0e0b071"
                    android:startColor="#a0a67637" />

                <corners android:radius="360dp" />

                <stroke
                    android:width="0dp"
                    android:color="#a0a67637" />
            </shape>
        </item>

        <item android:state_pressed="true">
            <shape
                android:shape="oval"
                android:useLevel="false">
                <gradient
                    android:angle="360"
                    android:endColor="#a0e0b071"
                    android:startColor="#a0a67637" />

                <corners android:radius="360dp" />

                <stroke
                    android:width="0dp"
                    android:color="#a0a67637" />
            </shape>
        </item>
        <item>
            <shape
                android:shape="oval"
                android:useLevel="false">
                <!--<gradient
                    android:angle="360"
                    android:endColor="@color/ccc_green"
                    android:startColor="@color/ccc_green" />-->

                <solid android:color="@color/ccc_green" />

                <corners android:radius="360dp" />

                <stroke
                    android:width="1dp"
                    android:color="@color/ccc_green" />

                <padding
                    android:bottom="@dimen/padding_10"
                    android:left="@dimen/padding_10"
                    android:right="@dimen/padding_10"
                    android:top="@dimen/padding_10" />

                <size
                    android:width="15dp"
                    android:height="15dp" />
            </shape>
        </item>
    </selector>

</inset>